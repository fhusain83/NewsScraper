<div class="row-fluid">
<div class="jumbotron" style="background:transparent margin:0px;padding:0px;">
<img src="/images/news.jpg" style="width:100%;filter:brightness(30%);"/>
 <span style="position:absolute;top:200px;font-family:'Times New Roman';font-style:bold;font-size:80px;color:white;padding-left:300px;">MONGO SCRAPER<br /><span style="font-size:20px;padding-left:250px;padding-top:0px;">New York Times Edition</span></span>


<div class="container">
<table>
<tbody>
{{#each articles}}
<tr>
<td>
<div class="panel panel-default" style="width:1200px;margin:10px;">
  <div class="panel-heading" style="background:Dodgerblue;color:white;font-size:30px;">
  <div>
  {{this.title}}
  </div>
  <div>
  {{#if this._id}}
   <button class="btn btn-default" id={{this._id}} style="background:green;color:white;">Add Note</button>
  {{/if}}
  </div>
  </div>
 <div class="panel-body" style="font-size:20px">{{this.link}}</div>
</div>
</td>
</tr>
{{/each}}
