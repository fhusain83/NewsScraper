</table>




</div>
</div>
</div>
</div>
<div id="myModal" class="modal modal-fixed-footer">
    
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="Notes">Notes For Article:{{id}}</h4>
            </div>
            <div class="modal-body">
             {{Notes}}
             <br/>
              <label  style="height:200px;;width:90%;border-style:solid;border-width:1px;">{{Notes}}</label>
              <br/>
             <textarea type="text" placeholder="New Note" style="height90%;width:90%;"></textarea>
            </div>
                <div class="modal-footer">
              <button type="button" class="btn btn default" data-dismiss="modal" aria-hidden="true">Save Note</button>
            </div>
        </div>
  
</div>
